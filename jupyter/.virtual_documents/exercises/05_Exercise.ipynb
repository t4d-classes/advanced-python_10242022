# Step 1 Solution

import pandas as pd

def clean_up_city(x):
    return x.split("[")[0].strip()

cities = pd.read_csv("cities.csv")
cities = pd.DataFrame(cities[0:10])
cities["City"] = cities["City"].apply(clean_up_city)
cities.to_csv("cities_top10.csv", index=False)

